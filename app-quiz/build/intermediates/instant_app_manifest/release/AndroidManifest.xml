<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fantastic.philosophyQuiz"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="28" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar" >
        <activity
            android:name="fantastic.philosophyQuiz.activity.kotlin.AddMyQuestionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="fantastic.philosophyQuiz.activity.java.HomeScreenActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fantastic.philosophyQuiz.activity.java.PlayAgainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="fantastic.philosophyQuiz.activity.kotlin.GameWonActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="fantastic.philosophyQuiz.activity.kotlin.TimeUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="fantastic.philosophyQuiz.MainGameActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>